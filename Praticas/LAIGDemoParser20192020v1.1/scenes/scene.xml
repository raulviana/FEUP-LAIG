        <primitive id="Triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="3" y3="3" z3="0" />
        </primitive>
        <primitive id="Cylinder">
            <cylinder top="1" base="1"  height="3" stacks="10" slices="10" />
        </primitive>
        <primitive id="Sphere">
            <sphere radius="0.5" slices="100" stacks="100"/>
        </primitive>
    </primitives>

