<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="20" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>  
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
        <background r="0" g="0" b="0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="spotLight" enabled="1" angle="65" exponent="2">
            <location x="-5" y="0" z="0" w="1.0" />
            <target x="0" y="5" z="5" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/bank.jpg" />
        <texture id="artTexture" file="scenes/images/vidral.jpg" />
        <texture id="rocksTexture" file="scenes/images/rocks.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="buildingTrans">
            <scale x="6" y="5" z="7" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle  x1="-1" y1="1" z1="0" x2="1" y2="1" z2="1" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="0.2" slices="30" stacks="30" />
        </primitive>
        <primitive id="seatLeg">
            <cylinder base="0.3" top="0.3" height="0.8" slices="20" stacks="20"/>
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.08" outer="0.6" slices="30" loops="30"/>
        </primitive>
        <primitive id="secondTorus">
            <torus inner="0.05" outer="0.4" slices="30" loops="30"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="seat"/>
                <componentref id="building"/>
                <componentref id="sculpture"/>
            </children>
        </component>

        <component id="seat">
            <transformation>
                <translate x="4" y="0" z="1.5"/>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="seatTop"/>
                <componentref id="seatLeg1"/>
                <componentref id="seatLeg2"/>
                <componentref id="seatLeg3"/>
                <componentref id="seatLeg4"/>
            </children>
        </component>

        <component id="seatTop">
            <transformation>
                <translate x="0" y="0.4" z="2"/>
                <rotate axis="x" angle="-90"/>
                <scale x="4" y="2" z="0.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component> 

        <component id="seatLeg1">
            <transformation>
                <translate x="0.2" y="0" z="0.2"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="seatLeg"/>
            </children>
        </component>

        <component id="seatLeg2">
            <transformation>
                <translate x="3.8" y="0" z="0.2"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="seatLeg"/>
            </children>
        </component>

        <component id="seatLeg3">
            <transformation>
                <translate x="3.8" y="0" z="1.8"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="seatLeg"/>
            </children>
        </component>

        <component id="seatLeg4">
            <transformation>
                <translate x="0.2" y="0" z="1.8"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="seatLeg"/>
            </children>
        </component>  

        <component id="building">
            <transformation>
                <transformationref id="buildingTrans"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <componentref id="firstWall"/>
                <componentref id="secondWall"/>
                <componentref id="thirdWall"/>
                <componentref id="fourthWall"/>
                <componentref id="floor"/>
            </children>
        </component>  

        <component id="firstWall">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component> 

        <component id="secondWall">
            <transformation>
                <translate x="0" y="0" z="1"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>     

        <component id="thirdWall">
            <transformation>
                <translate x="1" y="0" z="1"/>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="fourthWall">
            <transformation>
                <translate x="1" y="0" z="0"/>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="floor">
            <transformation>
                <translate x="0" y="0" z="1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rocksTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="sculpture">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="sculpArt"/>
                <componentref id="sculpBase"/>
            </children>
        </component>

        <component id="sculpBase">
            <transformation>
                <translate x="0" y="0" z="1"/>
                <scale x="1" y="2" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="firstBase"/>
                <componentref id="secondBase"/>
                <componentref id="thirdBase"/>
                <componentref id="fourthBase"/>
                <componentref id="actualBase"/>
                <componentref id="topBase"/>
            </children>
        </component>

        <component id="firstBase">
            <transformation>
                <translate x="0" y="0" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component> 

        <component id="secondBase">
            <transformation>
                <translate x="1" y="0" z="1"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>     

        <component id="thirdBase">
            <transformation>
                <translate x="1" y="0" z="0"/>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="fourthBase">
            <transformation>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="actualBase">
            <transformation>
                <translate x="0" y="0" z="0"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="topBase">
            <transformation>
                <translate x="0" y="1" z="1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="sculpArt">
            <transformation>
                <translate x="0.5" y="2.5" z="1.4"/>
                <rotate axis="z" angle="45"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="artTexture"/>
            <children>
                <primitiveref id="demoTorus"/>
                <primitiveref id="secondTorus"/>
                <primitiveref id="demoSphere"/>
            </children>
        </component>

    </components>
</lxs>